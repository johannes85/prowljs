{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/main/ts/**/*",
    "src/test/ts/**/*"
  ]
}